@page
@model IEnumerable<MomProduct.Web.Models.BlogTemplate>

@{
    ViewData["Title"] = "Home page";
}
<head>
    <title>Plant Tips</title>
    <style>
        .container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .card {
            width: 245px;
            text-align: center;
        }

            .card img {
                width: 100%;
                height: auto;
            }

            .card .number {
                font-size: 24px;
                color: orange;
                font-weight: bold;
            }

            .card .title {
                font-size: 16px;
                margin-top: 5px;
            }
    </style>
</head>
<body>
    <div class="container">

        @foreach (var blog in Model)
        {
            <div class="card">
                <img src="@blog.BlogImage" alt="Plant Image" />
                <div class="number">@blog.Id</div>
                <div class="title">@blog.BlogTitle</div>
            </div>
        }

