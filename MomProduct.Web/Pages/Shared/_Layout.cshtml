<body>
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="header-wrap" style="display: flex; align-items: center; justify-content: space-between; padding: 10px 0;">
                    <!-- Logo Section -->
                    <div class="top-left" style="display: flex; align-items: center;">
                        <div class="main-logo" style="margin-right: 20px;">
                            <div style="font-family: 'Arial', sans-serif;">
                                <!-- Main Logo Text -->
                                <a href="#" style="text-decoration: none; font-family: 'Arial Black', sans-serif; font-size: 28px;
                   color: black; background: linear-gradient(to right, black 50%, #dc4b4b 50%);
                   -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                   display: inline-block; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);">
                                    Mom<span style="color: #dc4b4b;">Product</span>
                                </a>

                                <!-- Slogan -->
                                <div style="font-size: 14px; color: #555; margin-top: 4px; font-style: italic;
                          text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);">
                                    Your Guide to a Healthier Tomorrow
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Navbar Section -->
                    <nav id="navbar" class="header-nav" style="flex-grow: 1;">
                        <div class="header-menu">
                            <ul class="nav-menu nav-hvr-effect" style="display: flex; list-style: none; padding: 0; margin: 0; justify-content: flex-end; gap: 20px;">
                                <li class="nav-item">
                                    <a href="index.html" class="nav-link" data-hover="Home" style="text-decoration: none; color: #333; font-weight: bold;">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#about-page" class="nav-link" data-hover="About" style="text-decoration: none; color: #333; font-weight: bold;">About</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#popular-stories" class="nav-link" data-hover="Stories" style="text-decoration: none; color: #333; font-weight: bold;">Stories</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#health-tips" data-hover="Health" class="nav-link" style="text-decoration: none; color: #333; font-weight: bold;">Health</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#popular-stories" class="nav-link" data-hover="Child Names" style="text-decoration: none; color: #333; font-weight: bold;">Child Names</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#health-tips" data-hover="Latest" class="nav-link" style="text-decoration: none; color: #333; font-weight: bold;">Latest</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#health-tips" data-hover="Contact Us" class="nav-link" style="text-decoration: none; color: #333; font-weight: bold;">Contact Us</a>
                                </li>
                            </ul>
                            <!-- Hamburger Menu -->
                            <div class="hamburger" style="display: none;">
                                <span class="bar"></span>
                                <span class="bar"></span>
                                <span class="bar"></span>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
          @RenderBody()
        </main>
    </div>

    <footer id="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-menu social-media">
                    <ul>
                        <li><a href="#">facebook</a></li>
